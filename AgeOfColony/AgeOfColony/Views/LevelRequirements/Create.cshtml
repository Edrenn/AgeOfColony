@model AgeOfColony.Models.LevelRequirement

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>LevelRequirement</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Level, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Level, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Level, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.RequiredResources, "Resource", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CollectedResourcesList", null, htmlAttributes: new { @class = "form-control", @id = "collectedResourcesList"})
            @Html.ValidationMessageFor(model => model.RequiredResources, "", new { @class = "text-danger" })
        </div>
    </div>


    <input id="collectedResourcesText" type="text" class="hidden" name="requiredResources" />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script language="javascript" type="text/javascript">
        $("#collectedResourcesList").change(function () {
            $("#collectedResourcesText").val($("#collectedResourcesText").val() + "," + $(this).val());
        });
    </script>
}
