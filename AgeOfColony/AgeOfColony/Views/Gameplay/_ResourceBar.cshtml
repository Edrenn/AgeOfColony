@using AgeOfColony.Models
@model List<CollectedResource>

<div class="col-md-12" style="background-color: #333333; height: 100px;">
    <div style="margin-left:300px">
        @foreach (CollectedResource cr in Model)
    {
        <label style="color: white; margin-top:40px; margin-right: 30px;"> <img src="@cr.Resource.ImgUrl" alt="" />@cr.Resource.Name : @cr.Quantity </label>
    if (cr.Resource.RareVersion != null)
    {
        <label style="color: white;  margin-right: 30px;"> <img src="@cr.Resource.RareVersion.ImgUrl" alt="" />@cr.Resource.RareVersion.Name : @cr.RareQuantity </label>
}
}
    </div>
</div>
